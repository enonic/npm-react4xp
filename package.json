  "dependencies": {
    "@babel/cli": "^7",
    "@babel/core": "^7",
    "@babel/plugin-proposal-object-rest-spread": "^7",
    "@babel/plugin-transform-arrow-functions": "^7",
    "@babel/plugin-transform-block-scoping": "^7",
    "@babel/plugin-transform-typeof-symbol": "^7",
    "@babel/polyfill": "^7",
    "@babel/preset-env": "^7",
    "@babel/preset-react": "^7",
    "@babel/preset-typescript": "^7",
    "@babel/register": "^7",
    "babel-loader": "^9",
    "chai": "^4",
    "chunks-2-json-webpack-plugin": "^1",
    "core-js": "^3",
    "deep-freeze": "^0.0.1",
    "es6-set-and-map": "^1",
    "esbuild": "^0.17.12",
    "esbuild-plugin-manifest": "^0.5.0",
    "filemanager-webpack-plugin": "^8",
    "glob": "^9",
    "mocha": "^10",
    "npm-safe-install": "^1",
    "prop-types": "^15",
    "properties": "^1.2.1",
    "q-i": "^2",
    "rimraf": "^4",
    "stats-webpack-plugin": "^0.7.0",
    "tsup": "^6.7.0",
    "webpack-stats-plugin": "^1.1.1"
  },
  "description": "Build tools for React4xp",
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "html-element": "^2.3.1",
    "path-exists-cli": "^2",
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "typescript": "^5",
    "webpack": "^5",
    "webpack-cli": "^5"
  },
  "files": [
    "app.cfg",
    "dist/**/*.js",
    "examples/*",
    "src/**/*.ts",
    "LICENSE",
    "npmInstall.gradle",
    "react4xp.gradle",
    "README*.md",
    "tsconfig.*.json",
    "tsup.config.*.ts",
    "updaters.gradle"
  ],
  "homepage": "https://github.com/enonic/enonic-react4xp#readme",
  "keywords": [
    "React4xp",
    "Enonic",
    "XP",
    "React"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "name": "@enonic/react4xp",
  "peerDependencies": {
    "@babel/plugin-proposal-class-properties": "^7",
    "react": "*",
    "react-dom": "*",
    "webpack": "^5.66",
    "webpack-cli": "^5"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:enonic/enonic-react4xp.git"
  },
  "scripts": {
    "build": "npx tsc",
    "clean": "rm -r *.log *.tgz bin build dist test/components/build test/constants/build test/constants/output test/nashornPolyfills/output 2>/dev/null; true",
    "lint": "eslint src/**/*.es6 src/**/*.js",
    "prebuild": "yarn clean",
    "prepack": "yarn build",
    "pretest": "yarn build",
    "test": "yarn test:client && yarn test:components && yarn test:executor && yarn test:nashornPolyfills",
    "test:client": "yarn tsup:client --env.DIR_PATH_ABSOLUTE_PROJECT $PWD/test/components && npx mocha test/client.spec.mjs",
    "test:components": "npx webpack --config dist/webpack.config.components.js --env DIR_PATH_ABSOLUTE_PROJECT=$PWD/test/components && npx mocha test/components/test.spec.mjs",
    "test:executor": "yarn tsup:executor --env.DIR_PATH_ABSOLUTE_PROJECT $PWD/test/components && npx mocha test/executor.spec.mjs",
    "test:nashornPolyfills": "webpack --config dist/webpack.config.nashornPolyfills.js --env DIR_PATH_ABSOLUTE_PROJECT=$PWD/test/nashornPolyfills && npx mocha test/nashornPolyfills/test.spec.mjs",
    "tsc": "npx tsc",
    "tsup:client": "npx tsup --config tsup.config.client.ts",
    "tsup:executor": "npx tsup --config tsup.config.executor.ts",
    "webpack:components": "npx webpack --config dist/webpack.config.components.js",
    "webpack:externals": "npx webpack --config dist/webpack.config.externals.js",
    "webpack:nashornPolyfills": "npx webpack --config dist/webpack.config.nashornPolyfills.js"
  },
  "version": "4.0.0-B1"
}
