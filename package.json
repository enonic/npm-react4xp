    "react-dom": "^18.2.0",
    "typescript": "^5",
    "webpack": "^5",
    "webpack-cli": "^5"
  },
  "files": [
    "app.cfg",
    "dist/**/*.js",
    "examples/*",
    "src/**/*.ts",
    "LICENSE",
    "README*.md",
    "tsconfig*.json",
    "tsup.config.*.ts"
  ],
  "homepage": "https://github.com/enonic/enonic-react4xp#readme",
  "keywords": [
    "React4xp",
    "Enonic",
    "XP",
    "React"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "name": "@enonic/react4xp",
  "peerDependencies": {
    "@babel/plugin-proposal-class-properties": "^7",
    "react": "*",
    "react-dom": "*",
    "webpack": "^5.66",
    "webpack-cli": "^5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:enonic/enonic-react4xp.git"
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.dist.json",
    "build:react4xp": "npm run tsup:client && npm run webpack:components && npm run tsup:executor && npm run webpack:globals && npm run webpack:nashornPolyfills",
    "clean": "rimraf bin build dist test/components/build test/constants/build test/constants/output test/nashornPolyfills/output",
    "lint": "eslint src/**/*.es6 src/**/*.js",
    "prebuild": "yarn clean",
    "prepack": "yarn test",
    "pretest": "yarn build",
    "test": "yarn test:caseCollision && yarn test:client && yarn test:components && yarn test:executor && yarn test:globals && yarn test:nashornPolyfills",
    "test:caseCollision": "npx mocha test/caseCollision/caseCollision.spec.mjs",
    "test:client": "cross-env-shell R4X_APP_NAME=com.enonic.app.whatever R4X_DIR_PATH_ABSOLUTE_PROJECT=$INIT_CWD/test/components NODE_ENV=development yarn tsup:client && npx mocha test/client.spec.mjs",
    "test:components": "cross-env-shell NODE_ENV=development R4X_APP_NAME=com.enonic.app.whatever R4X_DIR_PATH_ABSOLUTE_PROJECT=$INIT_CWD/test/components yarn webpack:components && npx mocha test/components.spec.mjs",
    "test:executor": "cross-env-shell R4X_APP_NAME=com.enonic.app.whatever R4X_DIR_PATH_ABSOLUTE_PROJECT=$INIT_CWD/test/components yarn tsup:executor && npx mocha test/executor.spec.mjs",
    "test:globals": "cross-env-shell R4X_DIR_PATH_ABSOLUTE_PROJECT=$INIT_CWD/test/components yarn webpack:globals && npx mocha test/globals.spec.mjs",
    "test:nashornPolyfills": "cross-env-shell R4X_DIR_PATH_ABSOLUTE_PROJECT=$INIT_CWD/test/nashornPolyfills yarn webpack:nashornPolyfills && npx mocha test/nashornPolyfills/test.spec.mjs",
    "tsup:client": "npx tsup --config tsup.config.client.ts",
    "tsup:executor": "npx tsup --config tsup.config.executor.ts",
    "webpack:components": "cross-env TS_NODE_PROJECT=\"tsconfig.browserAndGraalJS.json\" webpack --config dist/webpack.config.components.js",
    "webpack:globals": "cross-env TS_NODE_PROJECT=\"tsconfig.browserAndGraalJS.json\" webpack --config dist/webpack.config.globals.js",
    "webpack:nashornPolyfills": "cross-env TS_NODE_PROJECT=\"tsconfig.browserAndGraalJS.json\" webpack --config dist/webpack.config.nashornPolyfills.js"
  },
  "version": "4.0.0"
}
